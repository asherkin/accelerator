# vim: set ts=2 sw=2 tw=99 noet ft=python:
import os, sys

project = builder.LibraryProject('accelerator.ext')
project.sources = [
  'extension.cpp',
  'MemoryDownloader.cpp',
  os.path.join(Accelerator.sm_root, 'public', 'smsdk_ext.cpp')
]

def AddSourceFilesFromDir(path, files):
  list = []
  for file in files:
    list.append(os.path.join(path, file))
  return list

for cxx in Accelerator.targets:
  binary = Accelerator.ConfigureExtension(project, cxx, builder)
  compiler = binary.compiler

  compiler.defines += ['HAVE_CONFIG_H']
  compiler.cxxincludes += [
    os.path.join(builder.currentSourcePath, '..', 'breakpad', 'src'),
    os.path.join(builder.currentSourcePath, '..', 'breakpad', 'build', compiler.target.arch, 'src'),
  ]

  if compiler.target.platform in ['linux']:
    binary.sources += AddSourceFilesFromDir(os.path.join(builder.currentSourcePath, '..', 'breakpad', 'src', 'common'), [
      'dwarf_cfi_to_module.cc',
      'dwarf_cu_to_module.cc',
      'dwarf_line_to_module.cc',
      'dwarf_range_list_handler.cc',
      'language.cc',
      'module.cc',
      'path_helper.cc',
      'stabs_reader.cc',
      'stabs_to_module.cc',
      'dwarf/bytereader.cc',
      'dwarf/dwarf2diehandler.cc',
      'dwarf/dwarf2reader.cc',
      'dwarf/elf_reader.cc',
      'linux/crc32.cc',
      'linux/dump_symbols.cc',
      'linux/elf_symbols_to_module.cc',
      'linux/breakpad_getcontext.S'
		])

    compiler.postlink += [
      '-pthread',
      '-lz',
      os.path.join(builder.currentSourcePath, '..', 'breakpad', 'build', compiler.target.arch, 'src', 'libbreakpad.a'),
      os.path.join(builder.currentSourcePath, '..', 'breakpad', 'build', compiler.target.arch, 'src', 'third_party', 'libdisasm', 'libdisasm.a'),
      os.path.join(builder.currentSourcePath, '..', 'breakpad', 'build', compiler.target.arch, 'src', 'client', 'linux', 'libbreakpad_client.a'),
    ]

  if compiler.like('gcc'):
    compiler.defines += ['_GLIBCXX_USE_CXX11_ABI=0']

Accelerator.extension = builder.Add(project)